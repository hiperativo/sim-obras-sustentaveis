		= f.input_field t[:input_method], boolean_style: "nested"
		|  
		= t[:label]
	.controls data-requires="#{t[:input_method]}"
		= f.input_field "#{t[:input_method]}_tipo", label: false, 
			collection: ["Ar", "√Ågua"] << "Outros", as: :radio_buttons, boolean_style: :nested

